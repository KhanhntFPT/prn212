<Window x:Class="Project.CustomerSide.InfoUserPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.CustomerSide"
        mc:Ignorable="d"
        Title="InfoUserPopup" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ID:"/>
            <TextBox x:Name="txtId" IsReadOnly="True" />
            <TextBlock Text="Họ tên:"/>
            <TextBox x:Name="txtName" IsEnabled="False"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" IsEnabled="False"/>
            <TextBlock Text="Biển số xe:"/>
            <TextBox x:Name="txtLicensePlate" IsEnabled="False"/>
            <Button Content="Chỉnh sửa" Click="EditButton_Click"/>
            <Button Content="Lưu" Click="SaveButton_Click" IsEnabled="False" x:Name="btnSave"/>
        </StackPanel>
    </Grid>
</Window>
