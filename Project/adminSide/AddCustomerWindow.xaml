<Window x:Class="Project.adminSide.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="400" Width="380">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Add Customer" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Name:" />
            <TextBox Name="nameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Email:" />
            <TextBox Name="emailTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Balance:" />
            <TextBox Name="balanceTextBox" Margin="0,0,0,10" />

            <TextBlock Text="License Plate:" />
            <TextBox Name="licensePlateTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Password:" />
            <PasswordBox Name="passwordBox" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="SaveButton_Click" Width="80" Margin="10"/>
                <Button Content="Reset" Click="ResetButton_Click" Width="80" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
