<Window x:Class="Project.adminSide.TicketTypeDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket Type Detail" Width="420" Height="380"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Ticket Type" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="TypeId:" />
            <TextBox Name="typeIdTextBox" IsReadOnly="True" Margin="0,0,0,10" />

            <TextBlock Text="TypeName:" />
            <TextBox Name="typeNameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Price:" />
            <TextBox Name="priceTextBox" Margin="0,0,0,10" />

            <TextBlock Text="ValidityDays:" />
            <TextBox Name="validityDaysTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Description:" />
            <TextBox Name="descriptionTextBox" Margin="0,0,0,20" />

            <!-- Bố trí hai nút Save và Reset -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="SaveButton_Click" Width="80" Margin="10"/>
                <Button Content="Reset" Click="ResetButton_Click" Width="80" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
